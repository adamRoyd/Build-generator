position: relative;
	overflow: visible;
	height: auto !important;
	width: 100% !important;

padding: 0;
}

#dialogueholder .screenHolder
{
	width: 100% !important;
}


.revealText{
	height: auto;
	background: #333333;
	padding: 10px;
}
.revealText.pass
{
	background: #33BB33;
}
.revealText.partial,
.revealText.fail
{
	background: #BB3333;
}
.revealText p{
	color: white;
}

