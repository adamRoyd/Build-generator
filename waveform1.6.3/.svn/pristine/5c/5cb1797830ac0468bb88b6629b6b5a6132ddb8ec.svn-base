@import url("screentypes.css");
@import url("navigation.css");
@import url("fonts.css");
@import url("tabs.css");
@import url("menu.css");
@import url("timer.css");
@import url("custom.css");

#BIT {
	position: fixed;
	display:none;
	right:100px;
	top:0px;
	z-index: 1000;
}

#BIT button{
	background: blue;
	color: white;
	padding: 5px;
	float: left;
	border: none;
	font-size: 12px;
}
#BIT p{
	background: white;
	color: black;
	padding: 5px;
	float: left;
	border: black 1px solid;
	font-size: 12px;
}

html{
	height: 100%;
	margin: 0;
	padding: 0;
	overflow: auto;
}


/* ui elements */
*{
	margin:0;
	padding:0;
}

body{
	font-family:Arial;
	color:#000000;
	background:#ffffff;
	height: 100%;
}


#courseholder{
	display: block !important;
	position: relative;
	width: 100%;
}

#loaderholder{
	position: fixed;
	top: 0;
	left: 0;
	
	width:  100%;
	z-index: 1000;
	overflow:  visible;
}

.preloader{
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 0px;
	/* border: red 1px solid; */
}

.preloader img{
	position:absolute;
	top: 8px;
	left: 8px;
}

.loadbarcontainer{
	position:absolute;
	width: 100%;
	height: 4px;
	background: transparent;
}
.loadbar{
	position:absolute;
	height: 4px;
	background: #1B9DED;
}

.screenElement{
-webkit-box-sizing: border-box; /* Safari/Chrome, other WebKit */
-moz-box-sizing: border-box;    /* Firefox, other Gecko */
box-sizing: border-box;         /* Opera/IE 8+ */
	position: relative;
	top: 0!important;
	left: 0!important;
	width: auto !important;
	overflow: visible !important;

}
.screenElement .screen{
	height: auto !important;
}
.screenElement .screenElement{
	/*position: absolute;*/
}
.screenElement img{
	width: 100%;
}
.screenElement.text{
	padding-left: 10px;
	padding-right: 10px;
	height: auto !important;
}

.screenElement.video
{
	height: 100% !important;
}

.screenElement.video video
{
	height: auto !important;
}

.screenElement.video .jp-jplayer,
.screenElement.video .jp-jplayer img,
.screenElement.video .jp-jplayer video
{
	width: 100% !important;
	height: auto !important;
}

.screenElement.video .jp-jplayer img,
.screenElement.video .jp-jplayer video
{
	position: relative;
	/* display: block!important; */
	/* z-index:  1; */
}
.screenElement.video .jp-jplayer video
{
	left: 0;
	top: 0;
	/* position: absolute; */
	height: 1px !important;
	height:  1px;
}
.screenElement.video.started .jp-jplayer img
{
	display: block !important;
}
.screenElement.video.started .jp-jplayer video
{
	left: 0;
	top: 0;
	position: absolute;
	height: auto !important;
}
.screenElement.video.started .jp-jplayer
{
	height: 100% !important;
}

.click .over{
	display: none !important;
}
.click.disabled .over{
	display: block !important;
	position:  absolute;
	width: 100% !important;
}

.topicbutton .screenElement.image,
.topicbutton .screenElement.text
{
	position: relative;
	top: 10px !important;
	left: 10px !important;
}
.topicbutton .screenElement.image img
{
	height: 100%;
	width: auto !important;
}

.screenElement.box
{
	height: auto !important;
}


.navBtnsHolder {
	display: none !important;
}

.box>.background{
-webkit-box-sizing: border-box; /* Safari/Chrome, other WebKit */
-moz-box-sizing: border-box;    /* Firefox, other Gecko */
box-sizing: border-box;         /* Opera/IE 8+ */
	width: 100%!important;
	height: 100%!important;
	position: absolute !important;
}

.screenElement.box.topicbutton
{
	height: 120px !important;
}


.desktop{
	display: none !important;
}

button.invisibutton {
    z-index: 1;
    cursor: pointer;
    cursor: hand;
    position: absolute;
    top:0;
    left:0;
    border:none !important;
    padding:0 !important;
    margin: 0 !important;
	opacity: 0;
    filter: alpha(opacity=0);
    -ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=0)";
}

button.invisibutton {
    width:100% !important;
    height:100% !important;
}

button.invisibutton:disabled {
    cursor: default !important;
}

button.invisibutton.tabbed{
	opacity: 1;
    filter: alpha(opacity=1);
    -ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=100)";
    background: transparent;
    border:3px solid yellow !important;
}

.disabled button.invisibutton
{
	display: none !important;
}

.button 
{	
	-webkit-box-sizing: border-box;/* Safari/Chrome, other WebKit */
	-moz-box-sizing: border-box;/* Firefox, other Gecko */
	box-sizing: border-box; /* Opera/IE 8+ */
	background: #3F0F3F;
	border: 1px solid #3F0F3F;
	padding: 10px 20px;
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;
	border-radius: 5px;
	margin: 10px;
}

.lte8 .button {
	border-radius: 0;
}


.button.disabled{
	opacity:0.3 !important;
	filter:alpha(opacity=30) !important;
}

.button.over{
	
	color: #3F0F3F;
		background: #FFFFFF;
	    border: 1px solid #3F0F3F !important;
		color: #3F0F3F;
		cursor:pointer;
	
}


.button.over p{
	
	color: #3F0F3F;
	
}


.dialogueCloseBtn{
	top: 5px;
	right: 10px;
}

#dialoguemask{
    z-index: 1100;
	display: none;
	position: fixed !important;
	width: 100% !important;
	height: 100% !important;
	top: 0px !important;
	left: 0px  !important;
	background: rgba( 0, 0, 0, 0.8 );
}

#dialogueholder{
	-webkit-box-sizing: border-box; /* Safari/Chrome, other WebKit */
	-moz-box-sizing: border-box;    /* Firefox, other Gecko */
	box-sizing: border-box;         /* Opera/IE 8+ */
	display: none;
	position: absolute !important;
	width:100% !important;
	height:auto !important;
	z-index: 1101 !important;
	background: white;
	padding: 10px;
	top:  0 !important;
	margin:  0 !important;
	left:  0 !important;
}
	
#contentholder{
-webkit-box-sizing: border-box; /* Safari/Chrome, other WebKit */
-moz-box-sizing: border-box;    /* Firefox, other Gecko */
box-sizing: border-box;         /* Opera/IE 8+ */
	display: none;
	position: relative;
	width: 100%;
	top: 0px;
	left: 0px;
	background: #FFFFFF;
	padding-top: 80px;
}
#contentBG {
	content: " ";
	position: absolute;
	width: 100%;
	height: 100%;
	overflow: visible;
	top: 0;
	left: 0;
	background: #FFFFFF;
}

.screenHolder{
-webkit-box-sizing: border-box; /* Safari/Chrome, other WebKit */
