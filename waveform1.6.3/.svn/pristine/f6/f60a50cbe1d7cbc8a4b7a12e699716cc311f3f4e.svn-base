@charset "utf-8";
/* CSS Document */

.slideroption {	
	font-size:18px; 
	color:#ffffff;	
	text-align:	center;
	font-weight: bold;
	margin-top: -25px; 
}

.sliding_scale .custom .slider{
	position: absolute;	
	width:20px;
	height:20px;	
	top: -8px;	
	left: 20px;	
	background: silver;
	border-radius:50%;
}

.sliding_scale .slider_track{
	position: absolute;
	width:100px;
	height:3px!important;
	background: transparent!important;
	top: 15px;
}

.sliding_scale .slider_guide{
	position: absolute;
	width:100px;
	height:3px;
	background: #A2A2A2;
	top: 15px;
}

.sliding_scale .option_line{
	height: 15px;
	position : absolute ;
}

.sliding_scale .option
{
	position : absolute ;
	display : block ;
	border-radius : 5px ;	
}

.sliding_scale .option p
{
	text-align: center !important;
	width:  100%;
}
