@charset "utf-8";
/* CSS Document */


.mcq .option
{
	position:relative;
	padding: 15px 40px;
	width : 450px ;
	margin-bottom: 0 !important; 
}
.mcq .radio{
	position: absolute;
	top: 15px;
	left:10px;
	background: url('../../images/ui/ui_spritesheet.png') no-repeat -10px -430px;
	width: 17px;
	height: 17px;
}
.mcq .option.selected .radio {
	background-position: -10px -640px;
}
.mcq .option.over .radio{
	background-position: -10px -640px;
}
.mcq .tick{
	top: 3px;
	left: -25px;
}