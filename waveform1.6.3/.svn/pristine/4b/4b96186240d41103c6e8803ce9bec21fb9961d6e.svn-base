@import url("timer.css");
@import url("navigation.css");
@import url("tabs.css");
@import url("menu.css");
@import url("screentypes.css");
@import url("fonts.css");
@import url("custom.css");

body.ie.lte8 *{
	
	behavior: url(../../css/PIEFix/PIE.htc);
	-pie-png-fix: true;
	
}
body{	
	font-family:Arial;
	color:#000000;
	background:#EEEEEE;
	overflow:hidden;
	height:100%;
}


html{
	height:100%;
	margin:0; 
	padding:0;
}

.fullscreenvideo #courseholder{
	height: 0;
}

.fullscreenvideo .invisibutton {
	display: none !important;
	visibility: hidden;
}


#floater {
    float: left;
    height: 50%;
    margin-bottom: -322px;
    position: relative;
    width: 1px;
}

#courseholder{
	border: 1px solid #AAAAAA;
	clear: both;
	position: relative;
	margin: 0px auto;
	width: 1014px;
	height: 644px;
	overflow: hidden;
	display:  block;
}

#contentholder
{	
	display: none;
	position: absolute;
	width: 100%;
	height: 100%;
	overflow: visible;
	top: 0;
	left: 0;
}

.screenHolder
{
	position: absolute;
	width: 100%;
	height: 100%;
	overflow: visible;
	background: #FFFFFF;
}
#contentholder .screenHolder
{
	overflow:  hidden;
}

#navholder .screenHolder{
	top:  0;
	left: 0;
}

.lte8 .screenHolder
{
    border-radius: 0px!important;
}

.dialogueOpen #menuholder .invisibutton,
.dialogueOpen #contentholder .invisibutton,
.screenHolder.disabled .invisibutton
{
    display: none !important;
}

#introholder
{	
	display: none;
	position: absolute;
	height:644px;
	width:914px;
	top: 0px;
	left: 0px;
	overflow: visible;	
}

#dialogueholder
{	
	display: none;
	position: fixed;
	width:100px;
	height:50px;
	top: 0px;
	left: 1014px;
	z-index: 1101 !important;
}

#dialoguemask
{
    z-index: 1100;
	display: none;
    position: fixed;
    width: 100%;
    height: 100%;
	top: 0px;
	left: 0px;
	background: rgba( 0, 0, 0, 0.5 );
	filter: progid:DXImageTransform.Microsoft.gradient(GradientType=0,startColorstr='#66000000', endColorstr='#66000000');
	 /* IE */
}

.dialogueCloseBtn
{
	background: url('../../images/ui/ui_spritesheet.png') no-repeat -1570px -430px;
	width: 30px;
	height: 30px;
	right: 10px;
	top: 10px;
	cursor: pointer !important;	
}

.dialogueCloseBtn p
{
	position: absolute;
	left: -50px;
	display: none;
}

.dialogueCloseBtn.over
{	
	background-position: -1570px -640px;	
}

.dialogueCloseBtn.over p
{
	display: block;
}


#BIT 
{
	position: absolute;
	display:block;
	left:0;
	top:0;	
}

#BIT button{
	
	background: blue;
	color: white;
	padding: 5px;
	float: left;
	border: none;
	font-size: 12px;	
}

#BIT p
{	
	background: white;
	color: black;
	padding: 5px;
	float: left;
	border: black 1px solid;
	font-size: 12px;	
}

.BITtextInput
{	
	width:50px;
	height:20px;
	font-size: 12px;
	resize : none ;	
}

.bitGo
{	
	position: absolute;
	left: 80px ;
}



/* ui elements */
*{
	
	margin:0;
	padding:0;	
}

.disabled .showOnDisabled{
    display: block !important;
    opacity: 1 !important;
    visibility: visible !important;
}

.disabled .hideOnDisabled{
    display: none !important;
}

.screenElement{
	position: absolute;
}

.scrolling{
	overflow: auto;
}

button.invisibutton 
{
    cursor: pointer;
	cursor: hand;
	position: absolute;
	top:0;
	left:0;
	border:none !important;
	padding:0 !important;
	margin: 0 !important;
	opacity: 0;
	filter: alpha(opacity=0);
	-ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=0)";	
}



button.invisibutton 
{	
    width:100% !important;
	height:100% !important;	
}



button.invisibutton:disabled {
	
    cursor: default !important;
	
}



button.invisibutton.tabbed{
	
	opacity: 1;
	filter: alpha(opacity=1);
	-ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=100)";
	background: transparent;
	border:3px solid yellow !important;
	
}

.screenElement.screen
{
	overflow: hidden;
	border: 1px dashed red;
}

.screenElement.screen.scrolling
{
	overflow: auto;
}

.button .btn
{	
	padding: 10px 20px;
	-webkit-box-sizing: border-box;/* Safari/Chrome, other WebKit */
	-moz-box-sizing: border-box;/* Firefox, other Gecko */
	box-sizing: border-box; /* Opera/IE 8+ */

	background: #3F0F3F;
	border: 1px solid #3F0F3F;
	opacity: 1;
	visibility: visible;
	display: block;	
	filter: alpha(opacity=100);
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;
	border-radius: 5px;
}
.button.disabled .btn{
	opacity: 0.3 !important;
	filter:alpha(opacity=30) !important;
}
.button.hidden .btn{
	opacity:0 !important;
	display:none !important;
	filter:alpha(opacity=0) !important;
}

.button.disabled .invisibutton{
	display: none;
}

.lte8 .button {
	border-radius: 0;
}

.button.over .btn
{	
	color: #3F0F3F;
	background: #FFFFFF;
	border: 1px solid #3F0F3F !important;
	color: #3F0F3F;
	cursor:pointer;	
}


.button.over p
{	
	color: #3F0F3F;	
}


.tick
{
	position: absolute;
	top: 3px;
	left: -25px;
	background: url('../../images/ui/ui_spritesheet.png') no-repeat -270px -642px;
	width: 21px;
	height: 15px;
}

.text.reveal{
	background: #333333;
	padding: 10px;
	box-sizing: border-box;
}

.clickImg *{
	box-sizing: border-box;
	line-height: 0 !important;
}

.clickImg.over .after,
.clickImg.disabled .after{
	position: absolute;
	width: 100%;
	height: 100%;
	border: 2px solid #333333;
}

.click .over{
	display: none !important;
}
.click.disabled .over,
.click.over .over{
	display: block !important;
}

.pointer .arrow
{
	width:  0;
	height:  0;
}
.pointer.up .arrow
{
	border-top:0 !important;
	border-right-color:transparent !important;
	border-left-color:transparent !important;
}

.pointer.down .arrow
{
	border-bottom:0 !important;
	border-right-color:transparent !important;
	border-left-color:transparent !important;
}
.pointer.left .arrow
{
	border-left: 0px !important;
	border-top-color:transparent !important;
	border-bottom-color:transparent !important;
}
.pointer.right .arrow
{
	border-right:0 !important;
	border-top-color:transparent !important;
	border-bottom-color:transparent !important;
}

.shadow{
	-webkit-box-shadow: 1px 1px 10px 1px rgba(0,0,0,0.5);
	-moz-box-shadow: 1px 1px 10px 1px rgba(0,0,0,0.5);
	box-shadow: 1px 1px 10px 1px rgba(0,0,0,0.5);
}

#loaderholder{
	position: absolute;
    
	z-index: 1050;
}

.preloader{
	
	box-sizing: border-box;
	position: relative;
	left: 507px;
	margin-left: -75px;
	width: 150px;
	height: 50px;
	text-align: center;
	background: rgba(255, 255, 255, 0.8);
	padding: 5px;
	border-radius: 25px;
	border: 1px solid #1B9DED;
}

.screenElement.screen .preloader{
	top: 50%;
	left: 50%;
	margin-left: -75px;
	margin-top: -25px;
}

.lte8 #preloader,
.lte8 .preloader{
	border-radius: 0px;
	background: rgb(255, 255, 255);
}


.preloader img{
	
	position: absolute;
	left: 105px;
	top: 8px;
}



.loadbarcontainer{
	
	position: absolute;
	top: 10px;
	left:10px;
	width: 80px;
	height: 25px;
	border: 1px solid #1B9DED;
	border-radius: 22px;
	background: white;
	overflow: hidden;
}



.loadbar{
	
	background: #1B9DED;
	height: 25px;
	width: 50%;
	border-radius: 22px;
	
}
