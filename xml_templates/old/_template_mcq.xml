<?xml version="1.0" encoding="UTF-8"?>
<data>	

	<events>

		<event id="init">
				<media id="audio1" action="play" />
		</event>	
	
		<event id="pass">
			<media id="pass" action="play" />		
			<show>feedback_pass</show>
		</event>
		
		<event id="partial">
			<media id="partial" action="play" />		
			<show>feedback_partial</show>
		</event>
		
		<event id="fail">
			<media id="fail" action="play" />		
			<show>feedback_fail</show>
		</event>
		
		<event id="fail_attempt">			
			<show>feedback_fail_attempt</show>
		</event>
		
		<event id="reset">
			<hide delay="0.3">feedbackHolder</hide>
<!-- 			<translate x="370" animtime="0.3">feedbackHolder</translate> -->
			<hide delay="0.3">feedback_pass</hide>
			<hide delay="0.3">feedback_partial</hide>
			<hide delay="0.3">feedback_fail</hide>
			<hide delay="0.3">feedback_fail_attempt</hide>
		</event>
		
		<event id="submit">
			<log>submit</log>
<!-- 			<translate x="370">feedbackHolder</translate> -->
			<show>feedbackHolder</show>
<!-- 			<translate x="0" animtime="0.5">feedbackHolder</translate> -->
		</event>
	</events>

	<audio id="audio1" controls="false" autoplay="false" x="480" y="140" width="250" src="lib/audio/audio_test.mp3" />		
	
    <text id="introText" x="80" y="100" width="915">
	<![CDATA[<p class="title">Multiple Choice Question - One correct answer</p>
	<p>This is a text-based multiple choice question with just one correct answer. </p>
	<p class="prompt">Select your answer, then Confirm.</p>
	]]></text>

	<custom id="mcq" x="110" y="250">
		<settings optwidth="345" radiomode="true" randomise="true" />
		<option correct="false"><![CDATA[	<p>Copenhagen is the capital of France</p>]]></option>
		<option correct="false"><![CDATA[	<p>Paris is the capital of Spain</p>]]></option>
	</custom>
	
	<box id="btns" x="55" y="550">		
		<button id="resetBtn" 	x="150" y="0" enabled="false" func="reset"><![CDATA[<p>Reset</p>]]></button>
		<button id="submitBtn" 	x="0" 	y="0" enabled="false" func="submit"><![CDATA[<p>Confirm</p>]]></button>
	</box>	

	<box id="feedbackHolder" x="655" y="50" width="365" height="595" anim="alpha">
		<box id="feedback_pass" x="30" y="50" width="280" anim="hidden">
			<text>
				<![CDATA[
				<p>That's right!</p>

				]]>
			</text>
		</box>
		<box id="feedback_partial" x="30" y="50" width="280" anim="hidden">
			<text>
				<![CDATA[
				<p>That's nearly right.</p>
				]]>
			</text>
		</box>
		<box id="feedback_fail" x="30" y="50" width="280" anim="hidden">
			<text>
				<![CDATA[
				<p>Feedback - failed!</p>

				]]>
			</text>
		</box>

	</box>
		

	
</data>
