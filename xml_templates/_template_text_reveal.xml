<?xml version="1.0" encoding="UTF-8"?><data>

	<settings autocomplete="true" resizereload="true"/>

	<events>

		<event id="reset">
			<anim animtime="0.25" type="alphaout">reveal_click1</anim>
			<enable>click1</enable>			
			<anim animtime="0.25" type="alphaout">reveal_click2</anim>
			<enable>click2</enable>			
			<anim animtime="0.25" type="alphaout">reveal_click3</anim>
			<enable>click3</enable>
		</event>
		
		<event id="showreveal">
			<anim animtime="0.3" type="alpha">reveal_[ITEM]</anim>
			<disable>[ITEM]</disable>
		</event>

	</events>

	<image id="bg" y="74"><![CDATA[lib/images/ui/color_bg/placeholder.jpg]]></image>
	
	
    <text id="introText" class="white" width="615" x="80" y="100"><![CDATA[
	<p>GRAPHIC REVEAL</p> 

	]]></text>

	<box id="revealHolder">
		<box class="click" event="reset,showreveal" id="click1" width="180" height="180" x="115" y="235">
			<box class="clickHotspot" width="30" height="30" x="80%" y="10%"/>	
			<text id="clickText1"></text>
		</box>
		
		<box anim="hidden" bgalpha="1" bgcol="4F2070" class="reveal" id="reveal_click1" width="570" height="175" x="115" y="440">
			<pointer class="up" colour="4F2070" width="40" x="90" y="-20"/>
			<text id="reveal1text" width="calc(100% - 40px)" x="20" y="20"></text>
		</box>
		
		<box class="click" event="reset,showreveal" id="click2" width="180" height="180" x="410" y="235">
			<box class="clickHotspot" width="30" height="30" x="80%" y="10%"/>	
			<text id="clickText2"></text>
		</box>

		<box anim="hidden" bgalpha="1" bgcol="4F2070" class="reveal" id="reveal_click2" width="570" height="195" x="215" y="440">
			<pointer class="up" colour="4F2070" width="40" x="285" y="-20"/>
			<text id="reveal2text"  width="calc(100% - 40px)" x="20" y="20"></text>
		</box>
		
		<box class="click" event="reset,showreveal" id="click3" width="180" height="180" x="700" y="235">
			<box class="clickHotspot" width="30" height="30" x="80%" y="10%"/>	
			<text id="clickText3"></text>
		</box>

		<box anim="hidden" bgalpha="1" bgcol="4F2070" class="reveal" id="reveal_click3" width="570" height="150" x="310" y="440">
			<pointer class="up" colour="4F2070" width="40" x="480" y="-20"/>
			<text id="reveal3text"  width="calc(100% - 40px)" x="20" y="20"></text>
		</box>

	</box>


</data>
